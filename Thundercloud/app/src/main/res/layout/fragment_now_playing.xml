<RelativeLayout
    android:id="@+id/now_playing_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sample_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
        android:id="@+id/picker"
        android:layout_width="185dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"
        app:max="100"
        app:pointer_color="#00ff0000"
        app:pointer_halo_color="#000000ff"
        app:pointer_size="10dp"
        app:text_size="0sp"
        app:wheel_active_color="#b4b4b4"
        app:wheel_unactive_color="#000000" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_play"
        android:visibility="gone" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/now_playing_circle"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/next_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_next" />

    <ImageView
        android:id="@+id/prev_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_previous" />
</RelativeLayout>

