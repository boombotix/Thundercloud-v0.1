<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/now_playing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <boombotix.com.thundercloud.ui.view.CropImageView
        android:id="@+id/now_playing_album_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar
        android:id="@+id/picker"
        android:layout_width="185dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"
        app:max="100"
        app:pointer_color="#00ff0000"
        app:pointer_halo_color="#000000ff"
        app:pointer_size="10dp"
        app:text_size="0sp"
        app:wheel_active_color="@color/houndify_search_mask"
        app:wheel_unactive_color="#ffffff" />

    <ImageButton
        android:id="@+id/player_play_pause_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_play"
        android:visibility="gone" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/now_playing_circle"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/prev_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_previous"
        android:tint="@color/houndify_white"
        android:layout_marginStart="18dp"
        />

    <ImageView
        android:id="@+id/next_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_next"
        android:tint="@color/houndify_white"
        android:layout_marginEnd="18dp"
        />
</RelativeLayout>

