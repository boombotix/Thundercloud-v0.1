<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_bar_outer_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_bar_inner_height"
        android:background="@color/playerBarColor"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/basicText"
                android:textSize="@dimen/player_currently_playing"
                android:text="Sleeping Fox" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/basicText"
                android:textSize="@dimen/player_currently_playing"
                android:text="Pyramid" />
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_media_play"
            android:contentDescription="expand"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView2" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_below="@+id/linearLayout"
            android:max="100"
            android:progress="50"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:drawable/ic_lock_silent_mode_off"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:id="@+id/imageView3" />
    </RelativeLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/sym_def_app_icon"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
