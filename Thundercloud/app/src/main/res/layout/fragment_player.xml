<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_bar_outer_height"
    android:layout_marginLeft="@dimen/default_margin_half"
    android:layout_marginRight="@dimen/default_margin_half">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_bar_inner_height"
        android:layout_alignParentBottom="true"
        android:background="@color/playerBarColor">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.Thundercloud.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sleeping Fox" />

            <TextView
                style="@style/TextAppearance.Thundercloud.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pyramid" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/default_margin_2x"
            android:layout_height="@dimen/default_margin_2x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_media_play"
            android:contentDescription="expand" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:drawable/ic_lock_silent_mode"
                android:contentDescription="@string/description_now_playing_mute" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:drawable/ic_lock_silent_mode_off"
                android:contentDescription="@string/description_now_playing_full_volume" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/default_margin_4x"
        android:layout_height="@dimen/default_margin_4x"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/sym_def_app_icon" />
</RelativeLayout>
