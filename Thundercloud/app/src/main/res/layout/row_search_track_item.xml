<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp">

    <TextView
        android:id="@+id/search_track_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/houndify_white"
        tools:text="If This Tour Doesn't Kill You, I Will" />

    <TextView
        android:id="@+id/search_track_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_track_item_name"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textColor="@color/houndify_white"
        tools:text="PUP" />

    <TextView
        android:id="@+id/search_track_item_delimiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_track_item_name"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/search_track_item_artist"
        android:text="@string/row_search_track_delimiter"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textColor="@color/houndify_white" />

    <TextView
        android:id="@+id/search_track_item_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_track_item_name"
        android:layout_toEndOf="@+id/search_track_item_delimiter"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textColor="@color/houndify_white"
        tools:text="The Dream Is Over" />

</RelativeLayout>