<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp">

    <ImageView
        android:id="@+id/search_playlist_item_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:tint="@color/houndify_white"
        tools:src="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/search_playlist_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/search_playlist_item_thumbnail"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/houndify_white"
        tools:text="808s and 401Ks" />

    <TextView
        android:id="@+id/search_playlist_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_playlist_item_name"
        android:layout_toEndOf="@id/search_playlist_item_thumbnail"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textColor="@color/houndify_white"
        tools:text="Sam Loesch" />

</RelativeLayout>