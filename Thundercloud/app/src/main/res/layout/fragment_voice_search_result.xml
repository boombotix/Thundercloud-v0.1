<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/queueBackgroundColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#f00"
        android:text="@string/voice_search_result_waiting"
        android:id="@+id/voice_search_result_text"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voice_search_result_edit"
        android:visibility="gone"
        android:singleLine="true"
        android:textColor="#0f0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/voice_search_result_tap_to_edit"
        android:layout_above="@id/voice_search_result_text"
        android:text="@string/voice_search_result_tap_to_edit"
        android:visibility="invisible"
        android:textColor="#0f0"/>
</RelativeLayout>